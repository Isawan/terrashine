{
    extends: [
        'config:best-practices',
    ],
    packageRules: [
        {
            groupName: 'tokio-packages',
            matchPackageNames: [
                'tokio{/,}**',
            ],
        },
        {
            groupName: 'serde',
            automerge: true,
            matchSourceUrls: [
                'https://github.com/serde-rs/{/,}**',
            ],
        },
        {
            matchSourceUrls: [
                'https://github.com/tokio-rs/axum',
            ],
            matchUpdateTypes: [
                'patch',
            ],
            groupName: 'axum',
            automerge: true,
        },
        {
            matchSourceUrls: [
                'https://github.com/tower-rs/tower-http',
            ],
            matchUpdateTypes: [
                'patch',
            ],
            groupName: 'tower',
            automerge: true,
        },
        {
            matchPackageNames: [
                'url',
                'clap',
                'tempfile',
                'futures',
                'anyhow',
                'async-trait',
                'reqwest',
                'thiserror',
                'http',
            ],
            automerge: true,
        },
        {
            extends: [
                'monorepo:aws-sdk-rust',
            ],
            automerge: true,
        },
        {
            matchManagers: [
                'docker-compose',
                'github-actions',
            ],
            groupName: 'ci environment',
            automerge: true,
        },
    ],
}
